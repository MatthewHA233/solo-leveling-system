{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Server Notification",
  "description": "服务器推送给客户端的通知",
  "type": "object",
  "required": ["type", "payload"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["notification", "buff_change", "system_message", "quest_update", "level_up"]
    },
    "payload": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "body": { "type": "string" },
        "message": { "type": "string" },
        "actions": {
          "type": "array",
          "items": { "type": "string" }
        },
        "quest_id": { "type": "string" },
        "priority": {
          "type": "string",
          "enum": ["low", "normal", "high", "urgent"]
        },
        "style": {
          "type": "string",
          "enum": ["info", "warning", "success", "error", "epic"]
        }
      }
    }
  }
}
